<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.banvien.portal.vms.domain.ProductCommentEntity" table="ProductComment">
        <id name="productCommentId" column="productCommentId">
            <generator class="increment"/>
        </id>

        <many-to-one name="product" column="productId" lazy="false"/>

		<property name="customerName" column="customerName" not-null="true"/>

        <property name="email" column="email"/>

        <property name="phoneNumber" column="phoneNumber"/>

        <property name="message" column="message"/>

        <property name="createdDate" column="createdDate"/>

        <property name="resolvedDate" column="resolvedDate"/>
	
		<property name="resolvedBy" column="resolvedBy"/>
	</class>
</hibernate-mapping>