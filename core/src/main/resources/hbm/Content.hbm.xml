<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.banvien.portal.vms.domain.Content" table="Content">
        <id name="contentId" column="ContentID">
            <generator class="increment"/>
        </id>

        <many-to-one name="contentType" column="contentTypeId"/>

        <many-to-one name="contentCategory" column="contentCategoryId"/>

        <many-to-one name="authoringTemplate" column="authoringTemplateId"/>

		<property name="title" column="title"/>

        <property name="keyword" column="keyword"/>

        <property name="prefixUrl" column="prefixUrl"/>
	
		<property name="shortDescription" column="shortDescription"/>

        <property name="dataXML" column="dataXML"/>

        <property name="location" column="location"/>

        <property name="locationPoint" column="locationPoint"/>

        <property name="displayOrder" column="displayOrder"/>

		<property name="createdDate" column="createdDate"/>
	
		<property name="modifiedDate" column="modifiedDate"/>
		
		<property name="modifiedDate" column="modifiedDate"/>

        <property name="publishedDate" column="publishedDate"/>

        <many-to-one name="author" column="userId" lazy="false"/>
	</class>
</hibernate-mapping>