<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="com.banvien.portal.vms.domain.Category" table="PortalCategory">

        <id name="categoryID" column="CategoryID">
            <generator class="increment"/>
        </id>

		<property name="code" column="Code" not-null="true" unique="true"/>

        <property name="name" column="Name"/>

        <property name="prefixUrl" column="PrefixUrl"/>

        <property name="keyword" column="Keyword"/>
	
		<property name="description" column="Description"/>

        <property name="displayOrder" column="DisplayOrder"/>

		<property name="createdDate" column="CreatedDate"/>
	
		<property name="modifiedDate" column="ModifiedDate"/>

		<property name="parentRootID" column="ParentRootID"/>

        <many-to-one name="authoringTemplate" column="AuthoringTemplateID"/>

        <many-to-one name="renderingTemplate" column="RenderingTemplateID"/>

        <many-to-one name="parentCategory" column="ParentCatID"/>

        <bag name="children" table="PortalCategory" inverse="true" cascade="all-delete-orphan" lazy="false" >
            <key column="ParentCatID"/>
            <many-to-many column="CategoryID" order-by="displayOrder" class="com.banvien.portal.vms.domain.Category"/>
        </bag>

        <property name="eng" column="IsEng"/>
	</class>
</hibernate-mapping>